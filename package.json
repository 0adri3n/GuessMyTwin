{
  "name": "guessmytwin",
  "version": "1.0.1",
  "description": "The famous \"Guess Who ?\" game designed on Windows to play against your real twin.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.guessmytwin.app",
    "productName": "GuessMyTwin",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "pages/**/*",
      "scripts/**/*",
      "public/**/*",
      "styles/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "pages/img/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "GuessMyTwin"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0adri3n/GuessMyTwin.git"
  },
  "author": "0adri3n",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0adri3n/GuessMyTwin/issues"
  },
  "homepage": "https://github.com/0adri3n/GuessMyTwin#readme",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "tw-animate-css": "1.3.3",
    "typescript": "^5",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
